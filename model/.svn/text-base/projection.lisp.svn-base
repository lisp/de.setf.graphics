(in-package :de.setf.object-graphics.implementation)


(defMethod project ((instance rectangle))
  (rectangle (location instance) (end instance)
             (projection-properties instance)))

(defmethod project ((instance line))
  (line (location instance) (end instance)
        (projection-properties instance)))

(defmethod project ((instance polygon))
  (polygon (locations instance)
           (projection-properties instance)))

(defMethod project ((instance quadrangle))
  (polygon (locations instance)
           (projection-properties instance)))



(defMethod indicate ((instance quadrangle))
  (polygon (points (polyad-polygon instance))
           (indication-properties instance)))

(defMethod indicate ((instance line))
  (indicate (line-polygon instance)
           (indication-properties instance)))

(defMethod indicate ((instance rectangle))
  (polygon (points (element-polygon instance))
           (indication-properties instance)))

(defMethod indicate ((instance polygon))
  (polygon (polyad-polygon self)
           (indication-properties instance)))


:eof
